// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL") // <-- This uses Vercel's variable
  directUrl = env("POSTGRES_URL_NON_POOLING") // <-- This uses Vercel's variable
}

model Case {
  id        String     @id @default(cuid())
  createdAt DateTime   @default(now())
  verdict   String?    @db.Text
  documents Document[]
  arguments Argument[]
}

model Document {
  id        String   @id @default(cuid())
  caseId    String
  case      Case     @relation(fields: [caseId], references: [id])
  side      String // "A" or "B"
  content   String   @db.Text
}

model Argument {
  id        String   @id @default(cuid())
  caseId    String
  case      Case     @relation(fields: [caseId], references: [id])
  side      String // "A" or "B"
  content   String   @db.Text
  createdAt DateTime @default(now())
}